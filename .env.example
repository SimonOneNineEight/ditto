# ===========================================
# Ditto Production Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Domain for Caddy HTTPS (e.g., ditto.example.com)
DOMAIN=localhost

# --- Database ---
DB_USER=ditto
DB_PASSWORD=changeme
DB_NAME=ditto

# --- Backend ---
# Strong random string for signing JWTs (generate with: openssl rand -hex 32)
JWT_SECRET=changeme

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=https://ditto.example.com

# --- Frontend ---
# URL the browser uses to reach the backend API (must be the public domain, not Docker-internal)
NEXT_PUBLIC_API_URL=https://ditto.example.com

# NextAuth secret (generate with: openssl rand -hex 32)
AUTH_SECRET=changeme

# Public URL of the frontend (used by NextAuth for callbacks)
NEXTAUTH_URL=https://ditto.example.com

# --- OAuth Providers (optional) ---
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# --- S3 File Storage ---
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Custom endpoint for S3-compatible storage (e.g., MinIO, Backblaze B2)
AWS_ENDPOINT=
