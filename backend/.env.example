# Ditto Backend Environment Variables
# Copy to .env for local development

# --- Database ---
# Full connection string (takes priority over individual DB_* vars)
DATABASE_URL=postgres://ditto_user:ditto_password@localhost:5432/ditto_dev?sslmode=disable

# Individual DB vars (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_USER=ditto_user
DB_PASSWORD=ditto_password
DB_NAME=ditto_dev
DB_SSLMODE=disable

# Connection pool tuning
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MIN=5

# --- Server ---
PORT=8081
GIN_MODE=debug

# --- Auth ---
# JWT signing secret (generate with: openssl rand -hex 32)
JWT_SECRET=dev-jwt-secret-change-in-production

# --- CORS ---
# Comma-separated allowed origins (defaults to localhost if not set)
CORS_ORIGINS=

# --- S3 File Storage ---
AWS_REGION=us-east-1
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_ENDPOINT=
